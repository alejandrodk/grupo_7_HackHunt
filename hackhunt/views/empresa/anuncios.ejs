<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head'); -%>
    <link rel="stylesheet" href="/css/headerLog.css" />
    <link rel="stylesheet" href="/css/empresa/anuncios.css" />
</head>

<body>
    <header>
        <%- include('../partials/headerEmp'); -%>
    </header>
    <div class="container post">
        <div class="row">
            <div class="col-12 barra-menu wrap">
                <a href="/empresa/anuncios/crear">Nuevo anuncio</a>
                <a href="/empresa/anuncios" id="select">Mis anuncios</a>
                <a href="/empresa/informacion">Editar información</a>
                <a href="/empresa/perfil/configuracion">Configuración</a>
            </div>
            <div class="col-12 barra">
                <h2>Mis Anuncios</h2>
            </div>
            <div class="col-12 stats">
                <div class="detalle">
                    <div class="item">
                        <p><span>5</span> Anuncios</p>
                    </div>
                    <div class="item">
                        <p><span>3</span> Nuevos candidatos</p>
                    </div>
                    <div class="item">
                        <p><span>8</span> Perfiles destacados</p>
                    </div>
                </div>
            </div>
            <div class="col-2 panel">
                <div class="filtro">
                    <!-- consultar si conviene utilizar listas o inputs para filtros -->
                    <h3>Mostrar</h3>
                    <ul>
                        <li><input type="radio" name="filtrar" id="">Todas</li>
                        <li><input type="radio" name="filtrar" id="">Activos</li>
                        <li><input type="radio" name="filtrar" id="">Nuevas solicitudes</li>
                        <li><input type="radio" name="filtrar" id="">Finalizados</li>
                    </ul>
                </div>
            </div>
            <div class="col-7 anuncios">
                <% for (const anuncio of anuncios) { %>
                    <div class="item">
                        <a href="anuncios/modificar/<%=anuncio.anu_id%>">Modificar</a>
                        <div class="img">
                            <img src="https://dla.cdncimeco.com/uploads/2019/07/image5d320c2f994a1.png" alt="">
                        </div>
                        <div class="info">
                            <h2><%= anuncio.titulo %></h2>
                            <ul>
                                <li><%= anuncio.empresa %></li>
                                <li><%= anuncio.ubicacion %></li>
                                <li><%= anuncio.jornada %></li>
                            </ul>
                            <p class="desc"><%= anuncio.descrp %></p>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="col-3 candidatos wrap">
            <% for (const anuncio of anuncios) { %>
                    <div class="item">
                        <ul>
                            <li><i class="fas fa-concierge-bell"></i> Nuevas solicitudes <span><%= anuncio.nuevos %></span></li>
                            <li><i class="fas fa-users"></i> Candidatos totales <span><%= anuncio.candidatos %></span></li>
                            <li><i class="fas fa-medal"></i> Solicitudes destacadas <span><%= anuncio.destacados %></span></li>
                            <a href="anuncios/postulantes">Ver candidatos</a>
                        </ul>
                    </div>
                    <% } %>
                </div>
        </div>
    </div>
</body>

</html>