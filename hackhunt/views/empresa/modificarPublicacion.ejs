<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); -%>
    <!--Luego hay que hacer una validación de sesión iniciada para mostrar un header u otro-->
    <link rel="stylesheet" href="/css/headerLog.css" />
    <link rel="stylesheet" href="/css/empresa/crearPublicacion.css" />
</head>
<!-- CÓDIGO -->
<body>
    <header>
	    <%- include('../partials/headerEmp'); -%>
    </header>
    <div class="container-fluid cuerpo">
        <div class="container detalle">
            <div class="row separador">
                <div class="col-9 volver wrap">
                    <a href="/empresa/anuncios">../Volver</a>
                </div>
            </div>
            <div class="row cuerpo">
                <div class="col-9 wrap">
					<div class="anuncio wrap"> 
						<form action="/empresa/anuncios/modificar/<%=publicacion.anu_id%>" method="post">
							<div class="form-cont wrap">
								<div class="titulo wrap">
									<label for="anu_titulo"><p>Título</p></label>
									<input type="text" name="anu_titulo" id="anu_titulo" value="<%=publicacion.anu_titulo%>">
								</div>
								<div class="descrp wrap">
									<textarea name="anu_descrp" id="anu_descrp" cols="30" rows="10" placeholder="Descripción"><%= publicacion.anu_descrp %></textarea>
								</div>
								<div class="skills wrap">
									<label for="anu_skillsex"><p>Skills Excluyentes</p></label>
									<label for="anu_skilsdes"><p>Skills Deseables</p></label>
									<textarea name="anu_skillsex" id="anu_skillsex" cols="30" rows="10"><%= publicacion.anu_skillsex%></textarea>
									<textarea name="anu_skilsdes" id="anu_skilsdes" cols="30" rows="10"><%=publicacion.anu_skillsdes%></textarea>
								</div>
								<div class="info wrap">
									<label for="anu_fechacontr"><p>Fecha de contratación</p></label>
									<input type="date" name="anu_fechacontr" id="anu_fechacontr" value="<%=publicacion.anu_fechacontr%>">
									<label for="anu_area"><p>Área</p></label>
									<input type="text" name="anu_area" id="anu_area" value="<%=publicacion.anu_area%>">
									<label for="anu_ubicacion"><p>Ubicación</p></label>
									<input type="text" name="anu_ubicacion" id="anu_ubicacion" value="<%=publicacion.anu_ubicacion%>">
									<label for="anu_cargo"><p>Cargo</p></label>
									<input type="text" name="anu_cargo" id="anu_cargo" value="<%=publicacion.anu_cargo%>">
									<label for="anu_jornada"><p>Jornada</p></label>
									<input type="text" name="anu_jornada" id="anu_jornada" value="<%=publicacion.anu_jornada%>">
									<label for="anu_salario"><p>Salario</p></label>
									<input type="text" name="anu_salario" id="anu_salario" value="<%= publicacion.anu_salario%>">
								</div>
								<div class="beneficios">
									<label for="anu_beneficios"><p>Beneficios (opcional)</p></label>
									<textarea name="anu_beneficios" id="anu_beneficios" cols="30" rows="10"><%=publicacion.anu_beneficios%></textarea>
								</div>
							</div>
							<button type="submit">Guardar</button>
							<button type="reset">Limpiar</button>
						</form>
					</div>
                </div>
            </div>
       </div>
    </div>
    <footer>
        <%- include('../partials/footer'); -%>
    </footer>
<!-- CÓDIGO -->
</body>
</html>