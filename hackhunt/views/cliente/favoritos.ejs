<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head'); -%>
    <link rel="stylesheet" href="/css/headerLog.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/cliente/favoritos.css">
</head>
<body>
    <header>
        <%- include('../partials/headerLog'); -%>
    </header>  
    <div class="container fav">
        <div class="row">
                <div class="col-12 barra-menu wrap">
                    <a href="/perfil/informacion">Editar mi CV</a>
                    <a href="/perfil/postulaciones">Mis postulaciones</a>
                    <a href="/perfil/favoritos" id="select">Favoritos</a>
                    <a href="/perfil/seguidos">Seguidos</a>
                    <a href="/perfil/configuracion">Configuraci√≥n</a>
                </div>
            <div class="col-12 barra">
                <h2>Anuncios favoritos</h2>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 panel">
                <div class="seguidas">
                    <h3>Empresas favoritas</h3>
                    <% for(let item of user.favoritos){ %>
                        <a href="/detalle/empresa/<%=item.empresas.id %>">
                            <div class="item">
                                <div class="avatar">
                                    <img src="/images/avatars/<%=item.empresas.cmp_avatar %>" alt="<%= item.empresas.cmp_name %>" title="<%= item.empresas.cmp_name %>">
                                </div>
                                <h2><%= item.empresas.cmp_name %></h2>
                            </div>
                        </a>
                    <% } %> 
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 anuncios">
                <% user.favoritos.forEach(item =>{%>
                    <a href="/detalle?id=<%= item.id %>">
                        <div class="item">
                            <div class="img">
                                <img src="/images/avatars/<%=item.empresas.cmp_avatar %>" alt="">
                            </div>
                            <div class="info">
                                <h2><%= item.adv_title %></h2>
                                <ul>
                                    <li><%= item.empresas.cmp_name %></li>
                                    <li><%= item.adv_location %></li>
                                    <li><%= item.adv_working_day %></li>
                                </ul>
                                <p class="desc"><%= item.adv_description %></p>
                                <p class="sal">$<%= item.adv_salary %></p>
                                <p class="skills"><i class="fas fa-magic" title="Skills que cumples"></i> <%= item.compareSkills(user.skill).length + " / " + item.adv_skills.length %></p>
                            </div>
                        </div>
                    </a> 
                 <% }) %> 
            </div>
        </div>
    </div>
    <footer>
        <%- include('../partials/footer'); -%>
    </footer>
    <div class="background">
        <div class="item">
            <img src="/images/backgrounds/item-green.png" alt="">
        </div>
        <div class="item">
            <img src="/images/backgrounds/item-pink.png" alt="">
        </div>
    </div> 
</body>
</html>